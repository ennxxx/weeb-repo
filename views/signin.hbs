<body id="signin-body">

    <!--Home Button Image Div-->
    <header>
        <a href="/">
            <img src="/static/images/logo/logo1.png" id="signin-logo">
        </a>
        <h2 class="signin-title">Sign In To Your Account!</h2>
    </header>

    <!--Sign In Div-->
    <div class="signin-container">
        <form class="signin-form">
            <input type="text" id="username-input" class="textbox" required><br>
            <input type="password" id="password-input" class="textbox" required>
            <div id="warning" style="color: red;"></div>
            <br>
            <div class="remember-forget-container">
                <div class="remember">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me">Remember Me</label>
                </div>
                <div class="forget">
                    <a href="#" id="forget-password">Forget Password?</a>
                </div>
            </div>
            <div class="button-container">
                <input type="button" class="button" value="Sign In" id="signin-button">
                <input type="button" class="button" value="Register" onclick="window.location.href='/register'">
            <input type="button" class="button" value="Continue Anonymously" onclick="window.location.href='index.html'">
            </div>
        </form>
    </div>

    <!--Forget Password Div-->
    <div id="forget-popup">
        <div class="forget-popup-content">
            <button id="forget-close-button">âœ•</button>
            <h2>Reset your password</h2>
            <p> Enter your username associated with<br>
                the account to reset your password.</p>
            <form>
                <input type="text" placeholder="Username" id="username">
                <input type="submit" value="Reset" id="reset">
            </form>
        </div>
    </div>

    <!--Forget Password Popup-->
    <script>
        var forgetPasswordLink = document.getElementById('forget-password');
        var popup = document.getElementById('forget-popup');
        var closeButton = document.getElementById('forget-close-button');

        // Open the pop-up window when the forget password link is clicked
        forgetPasswordLink.addEventListener('click', function (e) {
            e.preventDefault();
            popup.style.display = 'flex';
        });

        // Close the pop-up window when the user clicks the close button
        closeButton.addEventListener('click', function () {
            popup.style.display = 'none';
        });
    </script>

</body>

